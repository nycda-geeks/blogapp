doctype html
html
	head
		style
				include ../style.css
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script.
			$(document).ready(function () {
				$('#submit').click(function(event) {
					if($('#email').val().trim().length === 0 || $('#password').val().trim().length === 0) {
						event.preventDefault();
						$('#error-message').html("Your username or password is empty.");
					}
				});
			});
	body
		#nav
			ul
				li 
					a(href='/') HOOOME ✿
				li.active
					a(href='/login') LOG IN ✿
				li
					a(href='/register') OR REGISTER ✿
				li
					a(href='/profile') CHECK OUT YOUR PROFILE ✿
				li
					a(href='/createpost') OR CREATE AN AMAZING POST ✿
				li
					a(href='/overview') AND IF YOU WANT TO, YOU CAN SEE ALL POSTS ✿
				li
					a(href='/specific') OR A SPECIFIC POST ✿
		br 
		br
		#main
			if user
				a(href='/profile') view profile
				br
				a(href='/logout') log out
			else
				form(action='/login' method='post')
					label email
					input#email(name='email' required)
					label password
					input#password(type="password" name='password' required)
					input(type='submit' value='login' id='submit')

			
